<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Line manager</th>
      <th>Status</th>
      <th>Title</th>
      <th>Start date</th>
      <th>Deadline</th>
      <th>Publish date</th>
      <th>Progress bar</th>
      <th>Editor</th>
      <th>Reporter</th>
      <th>Assignment</th>
      <th>Drive link</th>
      <th>Interest</th>
      <th>Sections progress bar</th>
      <th>Cms link</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.line_manager_id %></td>
        <td><%= article.status %></td>
        <td><%= article.title %></td>
        <td><%= article.start_date %></td>
        <td><%= article.deadline %></td>
        <td><%= article.publish_date %></td>
        <td><%= article.progress_bar %></td>
        <td><%= article.editor_id %></td>
        <td><%= article.user_id %></td>
        <td><%= article.assignment_id %></td>
        <td><%= article.drive_link %></td>
        <td><%= article.interest_id %></td>
        <td><%= article.sections_progress_bar %></td>
        <td><%= article.cms_link %></td>
        <td><%= article.notes %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
