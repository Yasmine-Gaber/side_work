<div id="<%= div_id %>" style="width:100%; height:300px;"></div>

<script> 
$(function () {
  $('#<%= div_id %>').highcharts({
    chart: {
      type: 'column'
    },
    title: {
      text: '<%= chart_title %>'
    },
    credits: {
      enabled: false
    },
    xAxis: {
      categories: <%= raw x_axis.to_json %>,
    },
    yAxis: [{
      min: 0,
      title: {
        text: 'عدد المقالات'
      }
    }],
    legend: {
      shadow: false
    },
    tooltip: {
      headerFormat: '<span style="direction: rtl; font-size:14px">{point.key}</span><table>',
      pointFormat: '<tr><td style="direction: rtl; padding:0"><b>{point.y} مقالة</b></td>' +
          '<td style="direction: rtl; color:{series.color};padding:0">{series.name}: </td></tr>',
      footerFormat: '</table>',
      shared: true,
      useHTML: true
    },
    plotOptions: {
      column: {
        grouping: false,
        shadow: false,
        borderWidth: 0
      }
    },
    series:  <%= raw data_series.to_json %>
  });
});
</script> 
